@import "base"

+establish-baseline(16px)

a
  +hover-link
  //+link-colors(#00c, #0cc, #c0c, #ccc, #cc0)

  &[href$=\#new]
    color: red

body
  font:
    family: Georgia, 'Times New Roman', serif

em
  font:
    style: italic

h1
  +adjust-font-size-to($base-font-size * 2)

h2
  +adjust-font-size-to($base-font-size * 1.333)

input
  margin: 2px 0

form
  p
    +column(15, true)
    +leader(0.5)
    +trailer(0.5)

  .left
    +column(7)

    > *
      margin-right: 0.5em

    input
      +confirm_button

    a
      +anchor_button

  .right
    +float-right
    +last

    a
      +anchor_button

      &.delete
        +delete_button

  fieldset
    +leader(0.5)
    +rhythm-borders(3px, 0, 16px, double)
    +column(15, true)
    padding: 0.5em
    border-color: #aaa

    label
      +float-left
      +last
      margin-right: 10px

  img
    display: block

  textarea
    +column(15.5, true)

p
  +leader(1)
  +trailer(1)

strong
  font:
    weight: bold

table
  +leader(0.5)
  +trailer(0.5)

  .odd
    background-color: #f0f0f0

  .even
    background-color: #e0e0e0

  td, th
    padding: 0 ($base-font-size / 2)

    //
      &:first-child
        padding-left: 0

      &:last-child
        padding-right: 0

    &.num
      text-align: right

  td
    +apply-side-rhythm-border(right, 1px, 0.5)
    border-right: dotted #ccc 1px

    &:last-child
      border-right: hidden

  thead
    th
      +trailing-border($lines:0)


.actions
  .left
    +column(7)
    a
      +anchor_button

  .right
    +float-right
    +last
    a.delete
      +delete_button

#content
  +column(24, true)
  //+grid-background

  .breadcrumbs
    +horizontal-list
    +adjust-font-size-to(13px)

    li
      padding-right: 0

    li:after
      content: ' ← '

    li:last-child:after
      content: ''

  .main
    +column(18)

  .sidebar
    //+prepend-top(3 * $base-line-height)
    +adjust-font-size-to(13px)
    +column(6, true)

    > p
      +leader(0)

#footer
  +column(24, true)
  +adjust-font-size-to(13px)
  padding: 0.5em 0

#header
  +column(24, true)
  +trailer(0.5)
  +trailing-border($width: 3px, $lines: 0.5)
  border-bottom: double black

  .left
    +column(12)

  .right
    +column(12, true)

    .session
      +float-right
      +horizontal-list

  ul
    +horizontal-list

#wrap
  +container
  //+grid-background
  margin: 0.5em auto