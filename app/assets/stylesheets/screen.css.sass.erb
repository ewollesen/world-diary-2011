@import "base"

+establish-baseline(16px)

body
  font:
    family: Georgia, 'Times New Roman', serif

h1
  +adjust-font-size-to($base-font-size * 2)

h2
  +adjust-font-size-to($base-font-size * 1.333)

input
  margin: 2px 0

form
  p
    +column(15, true)
    +leader(0.5)
    +trailer(0.5)

  .submit
    +column(12)

  .cancel
    +float-right
    +last

  fieldset
    +leader(0.5)
    +rhythm-borders(3px, 0, 16px, double)
    +column(15, true)
    padding: 0.5em
    border-color: #aaa

  .spacer
    +column(3)

  img
    +column(3)
    display: block

  .spacer
    height: 100px

p
  +leader(1)
  +trailer(1)

table
  +leader(0.5)
  +trailer(0.5)

  .odd
    background-color: #f0f0f0

  .even
    background-color: #e0e0e0

  td, th
    padding: 0 ($base-font-size / 2)

    //
      &:first-child
        padding-left: 0

      &:last-child
        padding-right: 0

    &.num
      text-align: right

  td
    +apply-side-rhythm-border(right, 1px, 0.5)
    border-right: dotted #ccc 1px

    &:last-child
      border-right: hidden

  thead
    th
      +trailing-border($lines:0)


.actions
  .edit
    +column(7)

  .delete
    +float-right
    +last

#content
  +column(24, true)
  //+grid-background

  .breadcrumbs
    +horizontal-list
    +adjust-font-size-to(13px)

    li
      padding-right: 0

    li:after
      content: ' ← '

    li:last-child:after
      content: ''

  .main
    +column(18)

  .sidebar
    //+prepend-top(3 * $base-line-height)
    +adjust-font-size-to(13px)
    +column(6, true)

    > p
      +leader(0)

#footer
  +column(24, true)
  +adjust-font-size-to(13px)
  padding: 0.5em 0

#header
  +column(24, true)
  +trailer(0.5)
  +trailing-border($width: 3px, $lines: 0.5)
  border-bottom: double black

  .left
    +column(12)

  .right
    +column(12, true)

    .session
      +float-right
      +horizontal-list

  ul
    +horizontal-list

#wrap
  +container
  //+grid-background
  margin: 0.5em auto