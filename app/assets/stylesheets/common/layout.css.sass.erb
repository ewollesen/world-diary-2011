@import "compass/reset"
@import "compass/typography"
@import "compass/layout/grid-background"
@import "compass/layout/sticky-footer"

@import "vars"
@import "form"

+establish-baseline(16px)
+sticky-footer($base-line-height * 2, "#footer")


body
  background-color: #bbb
  font-family: Georgia, serif
  margin: 0 auto
  width: 24 * $grid-width

h1
  +adjust-font-size-to($base-font-size * 2)


.breadcrumbs
  +adjust-font-size-to($base-font-size * 0.8125)

  li
    display: inline

    &:after
      content: ' ‚Üê'
    &:last-child:after
      content: ''


#header
  ul
    margin: 0
    padding-left: 0

    li
      display: inline

  .right
    float: right

  .left
    float: left

  .clear
    clear: both

#content
  .sidebar.right
    float: right
    width: 5 * $grid-width

  .main
    width: 15 * $grid-width

#footer
  clear: both
  margin-top: $base-line-height * 2

#wrap
  +grid-background
  background-color: #fff
